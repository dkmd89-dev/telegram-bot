import logging

logger = logging.getLogger(__name__)

async def handle_start(update: Update, context: ContextTypes.DEFAULT_TYPE) -> None:
    """
    Sendet eine personalisierte Willkommensnachricht und bietet Optionen an.
    Wird bei /start Befehl oder Klick auf den /start Button aufgerufen.
    """
    user = update.effective_user
    if not user:
        logger.warning("Kein effektiver Benutzer im Update-Objekt gefunden.")
        return

    welcome_message = (
        f"ğŸŒŸ Herzlich willkommen, {user.mention_html()}! Ich bin dein persÃ¶nlicher Musik-Bot.\n\n"
        "Ich helfe dir dabei, Musik von YouTube herunterzuladen und zu verwalten.\n\n"
        "WÃ¤hle eine Option oder gib einen Befehl ein:"
    )

    keyboard = [
        [
            InlineKeyboardButton("ğŸ¶ Musik herunterladen", callback_data="download_music"),
            InlineKeyboardButton("â“ Hilfe", callback_data="/help")
        ],
        [
            InlineKeyboardButton("â„¹ï¸ Status Ã¼berprÃ¼fen", callback_data="/status"),
            # NEU: Der /start Button
            InlineKeyboardButton("ğŸš€ Start", callback_data="/start")
        ]
    ]
    reply_markup = InlineKeyboardMarkup(keyboard)

    if update.callback_query:
        await update.callback_query.message.reply_html(
            welcome_message,
