        )

async def handle_start_callback(update: Update, context: ContextTypes.DEFAULT_TYPE) -> None:
    """
    Wird ausgefÃ¼hrt, wenn der Inline-Button '/start' gedrÃ¼ckt wird.
    Diese Funktion ruft die handle_start Funktion auf, um die BegrÃ¼ÃŸungsnachricht zu senden.
    """
    query = update.callback_query
    if not query:
        logger.warning("Keine CallbackQuery im Update-Objekt gefunden.")
        return

    callback_data = query.data

    if callback_data == "/start":
        logger.info("ğŸ” /start-Button wurde gedrÃ¼ckt")
        try:
            await handle_start(update, context)
            await query.answer("âœ… /start ausgefÃ¼hrt")
        except Exception as e:
            logger.error(f"âŒ Fehler beim AusfÃ¼hren von /start: {e}", exc_info=True)
            await query.answer("âŒ Fehler bei /start")
